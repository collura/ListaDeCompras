<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"  
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="Lista de Compras"               
             x:Class="ListaDeCompras.MainPage"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms">   
            <ContentPage.ToolbarItems>            
                <ToolbarItem Command="{Binding AddItem}" 
                        Order="Default" Priority="1" 
                        Icon="addItem.png"/>
            </ContentPage.ToolbarItems> 
            <StackLayout HorizontalOptions="Fill"
                         Orientation="Vertical"
                         VerticalOptions="Fill">                        
                           <ListView  
                                SeparatorColor="DarkBlue"
                                HorizontalOptions="Fill"                        
                                VerticalOptions="Fill"
                                x:Name="lvLista"                               
                                HasUnevenRows="false"                   
                                SelectedItem="SelectedItem_click"
                                ItemsSource="{Binding ItensToListView}">  
                                <ListView.ItemTemplate>
                                <DataTemplate>
                                            <ViewCell>                                              
                                                    <StackLayout Orientation="Horizontal" 
                                                                 VerticalOptions="Fill"
                                                                 HorizontalOptions="Fill"
                                                                 Margin="10,0,10,0">                                                    
                                                                 <StackLayout Orientation="Vertical" 
                                                                         VerticalOptions="Fill"
                                                                         HorizontalOptions="StartAndExpand"
                                                                         Spacing="1">
                                                                         <StackLayout Orientation="Horizontal"
                                                                                 VerticalOptions="Center"
                                                                                 HorizontalOptions="StartAndExpand">
                                                                                 <Label 
                                                                                        Text="{Binding Nome}" 
                                                                                        FontAttributes="Bold"
                                                                                        Margin="1,8,0,0" 
                                                                                        TextColor="Black"
                                                                                        HorizontalOptions="Fill"
                                                                                        HorizontalTextAlignment="Start" 
                                                                                        FontSize="Medium"/>                                                                                                            
                                                                        </StackLayout>

                                                                        <StackLayout Orientation="Horizontal"
                                                                                     VerticalOptions="Center"
                                                                                     HorizontalOptions="StartAndExpand">
                                                                        
                                                                                      <Label Text="{Binding Quantidade}" 
                                                                                            HorizontalOptions="Start"
                                                                                            FontAttributes="Bold"
                                                                                            Margin="0,5,0,0" 
                                                                                            HorizontalTextAlignment="Start" 
                                                                                            FontSize="Medium" 
                                                                                            TextColor="Green"/>                                                                            
                                                        
                                                                                     <Label Text="{Binding UnidadeMedida}" 
                                                                                            HorizontalOptions="Fill"
                                                                                            FontAttributes="Bold"
                                                                                            Margin="0,5,0,0" 
                                                                                            HorizontalTextAlignment="Start" 
                                                                                            FontSize="Medium" 
                                                                                            TextColor="Green"/>                                                                                                                                                                                                        
                                                                        </StackLayout>
                                                                 </StackLayout>
                                                    </StackLayout>
                                            </ViewCell>
                                     </DataTemplate>
                                </ListView.ItemTemplate>
                          </ListView>
            </StackLayout>
</ContentPage>