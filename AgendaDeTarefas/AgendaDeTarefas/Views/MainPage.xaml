<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="Lista de Tarefas"
             x:Class="AgendaDeTarefas.MainPage">
 <ContentPage.ToolbarItems>
        <ToolbarItem Name="Adicionar" Command="{Binding AddItem}" Order="Primary" Priority="0" />
</ContentPage.ToolbarItems>


    <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <ListView ItemsSource="{Binding ItensToListView}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding Nome}" 
                               TextColor="Green" 
                               Detail="{Binding Quantidade}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>